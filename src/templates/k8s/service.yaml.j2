apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ service_name }}-pvc
  namespace: {{ namespace }}
  labels:
    app: {{ service_name }}
spec:
  accessModes:
  - ReadWriteOnce
  storageClassName: {{ storage_class | default('standard') }}
  resources:
    requests:
      storage: {{ storage_size | default('10Gi') }}
